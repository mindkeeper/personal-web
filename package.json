{
  "name": "personal-web",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "tw:dev": "bunx  @tailwindcss/cli -i ./src/global.css -o ./dist/global.css --watch",
    "tw:build": "bunx @tailwindcss/cli -i ./src/global.css -o ./dist/global.css",
    "dev": "concurrently \"bun run tw:dev\" \"bun build ./src/scripts/main.js --outdir ./dist --watch\" \"bun run server.js\"",
    "build": "bun run tw:build && bun build ./src/scripts/main.js --outdir ./dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "tailwindcss": "^4.1.8",
    "typed.js": "^2.1.0"
  }
}
